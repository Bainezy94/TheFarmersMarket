
<h1>Markets</h1>

<div id="marketsMap"></div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Bio</th>
      <th>Opening hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% locations = [] %>
    <% @markets.each do |market| %>
      <tr>
        <td><%= market.name %></td>
        <td><%= market.location %></td>
        <td><%= market.bio %></td>
        <td><%= market.opening_hours %></td>
        <td><%= link_to 'Show', market %></td>
        <td><%= link_to 'Edit', edit_market_path(market) %></td>
        <td><%= link_to 'Destroy', market, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% loc = Geocoder.search(market.location) %>
      <% lat = loc.first.coordinates.first%>
      <% lng = loc.first.coordinates.second%>
      <% currentLoction = [market.name, lat, lng] %>
      <% locations << currentLoction %>
    <% end %>
  </tbody>
</table>

<br>

<%# should probably only have admin adding markets %>
<%= link_to 'New Market', new_market_path %>


<script> 
    test( "<%= locations %>" ) 
</script>